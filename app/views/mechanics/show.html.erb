<h2><%= @mechanic.name %></h2>
<h3>Years of experience: <%= @mechanic.years_experience %></h3>
<br>
<h4>Current Rides</h4>
<% @rides.each do |ride| %>
  <p>Ride name: <%= ride.name %></p>
  <p>Thrill rating: <%= ride.thrill_rating %></p>
  <br>
<% end %>

<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
  <h4>Add ride to workload</h4>
  <p><%= f.label :ride_id %></p>
  <%= f.number_field :ride_id %>
  <%= f.submit "Add ride to workload" %>
<% end %>